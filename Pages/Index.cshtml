@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<!DOCTYPE html>
<html lang="pt-BR">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ONG de Adoção de Animais</title>
</head>

<body>

    <link rel="stylesheet" href="css/base.css">
    <header>
        <h1>Bem-vindo à ONG de Adoção de Animais</h1>
        <p>Adote um amigo para a vida toda</p>
    </header>

    <main>

        <div class="container"> 
            <!-- Seção Sobre Nós -->
            <section id="about" class="about">
                <h2>Sobre Nós</h2>
                <p>
                    Somos uma ONG dedicada ao resgate e adoção de animais abandonados. Nosso objetivo é dar a esses
                    animais uma nova chance de encontrar um lar cheio de amor.
                </p>
            </section>

            <!-- Seção Animais para Adoção -->
            <section id="animals" class="animals">
                <h2>Animais para Adoção</h2>
                <div class="animal">
                    <figure> 
						<img src="c:\users\nomad\documents\github\testecriacaosite\images\cachorro2.jpg" />
                    </figure>
                    <h3>Rex</h3>
                    <p>Idade: 2 anos</p>
                </div>
                <div class="animal"> 
                    <img src="c:\users\nomad\documents\github\testecriacaosite\images\gato-albino-scaled.webp" />
                    <h3>Mia</h3>
                    <p>Idade: 1 ano</p>
                </div>
                <div class="animal">
                    <img src="c:\users\nomad\documents\github\testecriacaosite\images\cachorro.webp" />
                    <h3>Thor</h3>
                    <p>Idade: 3 anos</p>
                </div>
			</section>

            <!-- Seção Contato -->
            <section id="contact" class="contact">



                <h2>Entre em Contato</h2> <br />
                <form action="/enviar-contato" method="post">
                    <label for="nome">Nome:</label><br />
                    <input type="text" id="nome" name="nome" required><br />
                    <label for="email">E-mail:</label><br />
                    <input type="text" id="email" name="email" required><br />
                    <label for="telefone">Telefone:</label><br />
                    <input type="text" id="telefone" name="telefone"><br />
                    <label for="mensagem">Mensagem:</label><br />
                    <textarea id="mensagem" name="mensagem"></textarea><br />
                    <title>Botão Personalizado</title><br />
                    <link rel="stylesheet" href="style.css">

                    <button class="botao-personalizado">Clique Aqui</button>
                    
                </form>
            </section>
    
        </div>
    </main>
    <footer>

        <p>&copy; 2024 ONG de Adoção de Animais. Todos os direitos reservados.</p>

    </footer>

</body>

</html>
